@model ClientesListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Criar Novo Cliente</a>
</p>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Pesquisar</h5>
        <form asp-action="Index" method="get">
            <label for="NomeCliente" class="control-label">Nome</label>
            <input name="NomeCliente" type="search" class="form-control" value="@Model.ClienteSearched" />
            <div class="mt-3">
                <input type="submit" value="Pesquisar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
              Nome
              Apelido
            </th>
            <th>
                Contacto
            </th>
            <th>
              NIF
            </th>
            <th>
                Email
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListaClientes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            
              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClientesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<nav class="mt-3">
    <ul class="pagination">
        @{
            if (Model.PagingInfo.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Primeira</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="1">Primeira</a>
                </li>
            }

            int firstPage = Model.PagingInfo.CurrentPage - PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
            if (firstPage < 1) firstPage = 1;

            int lastPage = Model.PagingInfo.CurrentPage + PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
            if (lastPage > Model.PagingInfo.TotalPages) lastPage = Model.PagingInfo.TotalPages;

            for (int p = firstPage; p <= lastPage; p++)
            {
                if (p == Model.PagingInfo.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@p <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                    </li>
                }
            }

            if (Model.PagingInfo.CurrentPage == Model.PagingInfo.TotalPages)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Ultima</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@Model.PagingInfo.TotalPages">Ultima</a>
                </li>
            }
        }
    </ul>
</nav>
