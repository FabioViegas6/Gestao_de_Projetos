@model IEnumerable<Gestao_de_Projetos.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_projeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoProjeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPrevistaFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEfetivaFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_projeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoProjeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPrevistaFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEfetivaFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.Apelido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_projeto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_projeto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_projeto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
