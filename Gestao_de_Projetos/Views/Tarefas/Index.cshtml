@model TarefasListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var tarefas in Model.ListaTarefas)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@tarefas.Descricao</h5>
            <p class="card-text">@tarefas.dataInicio</p>
            <p class="card-text">@tarefas.dataFim</p>
            <p class="card-text">@tarefas.Membros</p>

            <a asp-action="Details" asp-route-id="@tarefas.idTarefas" class="btn btn-info">Details</a>
            <a asp-action="Edit" asp-route-id="@tarefas.idTarefas" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@tarefas.idTarefas" class="btn btn-danger">Delete</a>
        </div>
    </div>
}
